<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matio.seashell.ui.fragment.DiscoverFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toobar_fragment_discover"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/return_grey" />

        <TextView
            style="@style/TitleCenter"
            android:text="发现" />

    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/listview_fragment_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toobar_fragment_discover" />

</RelativeLayout>
